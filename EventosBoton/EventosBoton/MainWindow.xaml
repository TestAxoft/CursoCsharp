<Window x:Class="EventosBoton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventosBoton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">



    <StackPanel Name="Panel" VerticalAlignment="Center" PreviewMouseLeftButtonDown="Panel_PreviewMouseLeftButtonDown">

        <Button Content="Dale" Width="200" Margin="15,15,15,0" Click="Button_Click"></Button>
        <Button Content="Apretá" Width="200" Margin="15,15,15,0"></Button>
        <Button Content="Esto!!" Width="200" Margin="15,15,15,0"></Button>
        
    </StackPanel>
    
</Window>
